{
  "name": "denote-app",
  "version": "0.1.0",
  "description": "Note taking app for the STEM students.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "APP_DEV=true electron .",
    "build": "webpack --mode production --config webpack.common.js",
    "deploy": "export GH_TOKEN=$(cat ./gh_token) && npm i && npm run build && rm -rf dist && electron-builder build --mac --win --publish always",
    "watch": "webpack --config webpack.common.js --watch",
    "dist": "npm i && npm run build && rm -rf dist && electron-builder build --publish never"
  },
  "build": {
    "appId": "com.denote.app",
    "productName": "Denote",
    "copyright": "Copyright Â© 2023 Denote",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js",
      "package.json",
      "assets/*",
      "src/public/*",
      "index.html",
      "update_logs.html",
      "forge.config.js",
      "webpack.common.js",
      "package-lock.json",
      "package.json",
      "scripts/*"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "universal",
          "zip"
        ]
      },
      "category": "public.app-category.productivity",
      "icon": "assets/Denote-Icon-Rounded-1024.icns",
      "identity": "Edgar Baudry (T3Q5PMNQ47)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      "icon": "assets/Denote-Icon-Rounded-256.ico"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ouragan84",
        "repo": "denote-releases",
        "releaseType": "release"
      }
    ],
    "afterSign": "scripts/notarize.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ouragan84/denote-releases.git"
  },
  "publish": {
    "provider": "github",
    "owner": "ouragan84",
    "repo": "denote-releases",
    "releaseType": "release"
  },
  "keywords": [
    "editorjs",
    "slant",
    "note-taking",
    "app",
    "stem",
    "students",
    "education",
    "svg-drawing",
    "excalidraw"
  ],
  "author": "Denote",
  "license": "ISC",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "jsdom": "^21.1.1",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@electron/osx-sign": "^1.0.4",
    "app-builder-lib": "^24.4.0",
    "babel-loader": "^9.1.2",
    "dotenv": "^16.0.3",
    "electron": "^24.2.0",
    "electron-builder": "^24.4.0",
    "electron-builder-notarize": "^1.5.1",
    "electron-notarize": "^1.2.2",
    "electron-packager": "^17.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2"
  }
}
